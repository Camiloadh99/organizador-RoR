
<%= render 'devise/shared/form_structure', title: 'Log in' do %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", id: "password" } %>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="show-password">
      <label class="form-check-label" for="show-password">Mostrar contrase√±a</label>
    </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    

    <div class="d-grid gap-2 col-6 mx-auto">
      <%= f.button :submit, "Log in", class:"btn-primary"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>


  <script>
    document.getElementById('show-password').addEventListener('change', function() {
      var passwordField = document.getElementById('password');
      if (this.checked) {
        passwordField.type = 'text';
      } else {
        passwordField.type = 'password';
      }
    });
  </script>
<% end %>
